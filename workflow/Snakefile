from snakemake.utils import min_version

##### set minimum snakemake version #####
min_version("6.15.0")


##### setup report #####
configfile: "config/config.yaml"


##### load rules #####
include: "rules/common.smk"
include: "rules/coverage.smk"



##### target rules #####

rule all:
    input:
# CALCULATE COVERAGE
        expand("results/stats/{sample}_panel_coverage.tsv",sample=list(samples_master.keys())),
        expand("results/stats/{sample}_canonical_coverage.tsv",sample=list(samples_master.keys())),
# PARSE RESULTS
        expand("results/tsv/{sample}.coverage.tsv",sample=list(samples_master.keys()))
